<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ui.about.AboutFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/quadruple_margin">

        <ImageView android:id="@+id/imgAbout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_header_height"
            android:src="@drawable/about_android_trivia"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/lblAbout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/about_lblRules"
            android:textSize="26sp"
            android:layout_margin="@dimen/base_margin"
            app:layout_constraintTop_toBottomOf="@id/imgAbout"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
